<Window x:Class="MancalaAssessment.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MancalaAssessment.Views"
        mc:Ignorable="d"
        Title="MainWindow" Width="800" SizeToContent="Height">
    <StackPanel>
        <TextBlock Text="{Binding BannerText}" Margin="16" TextAlignment="Center" FontSize="20" FontWeight="Bold" />
        <local:Board x:Name="GameBoard" />
        <Button Width="128" Margin="16" Click="NewGame_Click">New Game</Button>
    </StackPanel>
</Window>
